<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.app.views.viewpager.ScrollerViewPager
        android:id="@+id/indicatorPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.app.views.springindicator.SpringIndicator
        app:siTextSize="10dp"
        android:layout_alignBottom="@id/indicatorPager"
        app:siTextColor="@color/textPrimary"
        app:siSelectedTextColor="@android:color/white"
        app:siIndicatorColor="@color/primaryColor"
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
