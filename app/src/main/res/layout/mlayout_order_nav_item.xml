<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navigatorSize"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/translucence_bg" >

        <TextView
            style="@style/appTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textPrimary"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:gravity="center_vertical"
            android:text="@string/order_goods_info" />

        <Button
            android:id="@+id/btnOpreate"
            style="@style/textPrimary"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/promptColor"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:minWidth="50dp"
            android:singleLine="true"
            android:text="@string/order_return_goods"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>