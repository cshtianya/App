<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.app.views.IphoneTreeView
        android:id="@+id/expListView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:childDivider="@null"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:groupIndicator="@null"
        android:scrollbarThumbVertical="@drawable/list_scrollbar" />

    <com.app.views.custom_views.ProgressBarCircularIndeterminate
        android:id="@+id/circularBar"
        android:layout_width="@dimen/primaryIconSize"
        android:layout_height="@dimen/primaryIconSize"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>

