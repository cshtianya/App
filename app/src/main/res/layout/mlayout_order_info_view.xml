<?xml version="1.0" encoding="utf-8"?>
<com.app.views.UIOrderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin"
    android:paddingTop="@dimen/margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/translucence_bg"
        android:clickable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navigatorSize"
            >

            <TextView
                style="@style/appTitleStyle"
                android:textColor="@color/textPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
            	android:layout_margin="@dimen/margin"
                android:singleLine="true"
                android:text="@string/order_order_info" />

            <TextView
                android:id="@+id/txtOrderState"
                style="@style/appTitleStyle"
                android:textColor="@color/promptColor"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
            	android:layout_margin="@dimen/margin"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="" />
        </RelativeLayout>

        <View
            style="@style/line" />

        <TextView
            android:id="@+id/txtOrderNo"
            style="@style/textSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/txtPayNo"
            style="@style/textSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/txtCreateTime"
            style="@style/textSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:singleLine="true"
            android:text="" />
    </LinearLayout>

</com.app.views.UIOrderView>